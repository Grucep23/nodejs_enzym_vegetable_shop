<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update item</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="update-item-container">
        <form action="/update-item" method="POST">
            <div>
                <label>Name:</label>
                <input name="firstName" value="<%= dataItem.name %>" />
            </div>
            <div>
                <label>Date:</label>
                <input name="lastName" value="<%= dataItem.date %>" />
            </div>
            <div>
                <label>Price:</label>
                <input name="text" value="<%= dataItem.price %>" />
            </div>
            <div>
                <label>Amount:</label>
                <input name="address" value="<%= dataItem.amount %>" />
            </div>
            <input type="text" value="<%= dataItem.id %>" hidden name="id" />
            <div>
                <button class="btn-save" type="submit">Save</button>
            </div>

        </form>
    </div>

</body>

</html>